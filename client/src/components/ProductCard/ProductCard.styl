.product-card
  display grid
  grid-template 155px 3rem 1rem / 1fr 1fr 1fr
  width 300px
  margin-bottom 25px
  background linear-gradient(356deg, #7e57c2, #e91e63);
  box-shadow 1px 3px 4px rgba(0, 0, 0, 0.5)
  border-radius 5px
  color white
  & > h4
    grid-area 2 / 1 / 3 / 4
    margin-left 1rem
  & > h6
    grid-area 3 / 1 / 4 / 3
    margin-left 1rem
  & img
    grid-area 1 / 1 / 2 / 4
    width 300px
    height 150px
    object-fit cover
    border-radius 5px 5px 0 0
    transition: transform .5s
  &:hover
    transition: transform .5s
    transform: scale(1.3);
a.link {
    text-decoration: none;}